<div class="row margin-top-15">
  <div class="col s12">
    <!-- <a class="waves-effect waves-light btn-large lighten-2 past-events-btn large-6">TechTalks</a> -->
    <%= form_tag("/search", :method => "get", id: "search-form") do %>
      <%= text_field_tag :keyword, params[:search], placeholder: "Search for a techtalk subject" %>
      <%= submit_tag "Busca", :name => nil, class: "btn" %>
  <% end %>
  </div>
</div>

<div class="row">

  <% if @techtalks.nil? %>
    <p>
      Não há nenhum TechTalk cadastrado ainda.
    </p>
  <% else %>
    <% @techtalks.each do |tech| %>
    <div class="col s6">
      <div class="card card-job box">
       <% tech.tagsArray.each do |tag| %>
        <div class="chip color"><%=tag%></div>
        <% end %>
        <p class="job-name card-title"><%=tech.title%></p>
        <p class="job-description"><%=tech.description%></p>
        <p class="enterprise"><%= tech.company_name%></a></p>
        <p class="date"><%= tech.date%></p>
        <%= link_to "Saiba mais", "#", class: "waves-effect btn-flat" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
