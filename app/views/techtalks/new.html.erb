<h2>Cadastro do TechTalk</h2>

<%# if @techtalk.errors.any? %>
<%# end %>

<%= form_for @techtalk, url: { action: "create" }, html: { class: "form-horizontal" } do |f| %>
  <%= f.label :type, 'Título do TechTalk' %>
  <%= f.text_field :title, placeholder: "Ex.: TechTalk Explosion", input_html: { class: 'input-field' } %>

  <label>Categoria</label>
  <p>
    <%= f.radio_button :type, 'programming', checked: true %>
    <%= label :type, 'Programação' %>
  </p>
  <p>
    <%= f.radio_button :type, 'designer' %>
    <%= label :type, 'Designer' %>
  </p>
  <p>
    <%= f.radio_button :type, 'ux' %>
    <%= label :type, 'UX' %>
  </p>
  <p>
    <%= f.radio_button :type, 'ui' %>
    <%= label :type, 'UI' %>
  </p>
  <p>
    <%= f.radio_button :type, 'sysadmin' %>
    <%= label :type, 'Administrador de Sistemas' %>
  </p>
  <p>
    <%= f.radio_button :type, 'others' %>
    <%= label :type, 'Outros' %>
  </p>

  <%= f.label :type, 'Descrição do TechTalk' %>
  <%= f.text_area :description, class: "materialize-textarea", length: "120" %>

  <%= f.label :company_name, 'Nome da empresa' %>
  <div class="input-field col s6">
    <i class="material-icons prefix">account_circle</i>
    <%= f.text_field :company_name, placeholder: 'Informe o nome da sua empresa' %>
  </div>

  <%= f.label :url, 'Site' %>
  <%= f.text_field :url, placeholder: 'Ex.: www.google.com', class: "input-field" %>

  <%= f.label :company_email, 'Email' %>
  <div class="input-field col s6">
    <i class="material-icons prefix">email</i>
    <%= f.text_field :company_email, placeholder: 'seu-email@seu-dominio.com', class: "input-field" %>
  </div>

  <%= f.submit "Cadastrar", class: "btn" %>
<% end %>
